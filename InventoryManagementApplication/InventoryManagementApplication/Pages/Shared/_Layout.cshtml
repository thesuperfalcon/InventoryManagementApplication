<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManagementApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryManagementApplication.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
              <!-- Logo -->
            <a class="navbar-brand" href="/">
                <img src="/images/logos/ssabLogo.png" alt="ssabLogo" class="d-inline-block align-text-top custom-logo ms-3">
            </a>
            <div class="container">

                <!-- Toggler for mobile screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar links -->
                <div class="navbar-collapse collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                            </li>


                            @* Om användaren är Admin *@
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-nowrap" id="register" asp-area="Identity" asp-page="/Account/Register">Registrera användare</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-nowrap" asp-area="" asp-page="/UsersRoles">Användare och roller</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark text-nowrap" asp-area="" asp-page="/admin/product/index">Produktkatalog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark text-nowrap" asp-area="" asp-page="/admin/storage/index">Lagerplatser</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark text-nowrap" asp-area="" asp-page="/admin/tracker/index">Flytta produkt</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark text-nowrap" asp-area="" asp-page="/reportPage">Lagersaldo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark text-nowrap" asp-area="" asp-page="/log">Loggning</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark text-nowrap" asp-area="" asp-page="/statistic">Statistik</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top text-muted">
        <div class="footer-container">
            <div class="footer-left">
                &copy; 2024 - Lagerhanteringsapplikation</div>
            <div class="footer-right"> 
                <a class="nav-link" asp-area="" asp-page="/AboutUs">Om oss</a>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>