@if (TempData["UserDeleted"] != null && TempData["UserDeleted"].ToString() == "True")
{
    <div class="alert alert-success" role="alert">
        Användaren har raderats. Du kommer att omdirigeras till användaröversikten om några sekunder.
        <br />
        <a href="/UsersRoles" class="btn btn-primary mt-2">Gå tillbaka nu</a>
    </div>

   <script>
        setTimeout(function () {
            window.location.href = '/UsersRoles';
        }, 5000);
    </script>
}
