@using Microsoft.AspNetCore.Identity
@using InventoryManagementApplication.Areas.Identity.Data

@inject SignInManager<InventoryManagementUser> SignInManager
@inject UserManager<InventoryManagementUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav"> 
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="@user.ProfilePic" alt="Profile Picture" class="rounded-circle small-profile-pic" />@user.UserName
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Hantera konto</a>
            </li>
            <li>
                <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                    <button id="logout" type="submit" class="dropdown-item border-0">Logga ut</button>
                </form>
            </li>
        </ul>
    </li>
    </ul>
}

