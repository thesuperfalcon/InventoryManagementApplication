@page
@model InventoryManagementApplication.Pages.UsersRolesModel
@{
    string isDeletedMessage = Model.IsDeletedToggle == false ? "Aktiva" : "Borttagna";
}

    <h2>Användaröversikt</h2>
    <h3>Antal (@isDeletedMessage) användare: @Model.UserCount</h3>

    <form method="post" asp-route-buttonId="1">
        <input type="hidden" name="IsDeletedToggle" value="@Model.IsDeletedToggle.ToString().ToLower()" />
       <button class="btn custom-small-btn" type="submit">
            @if (Model.IsDeletedToggle)
            {
                <span>Aktiva Användare</span>
            }
            else
            {
                <span>Borttagna Användare</span>
            }
        </button>
    </form>

<div class="input-group">
    <input id="userRolesSearchInput" type="text" class="form-control" placeholder="Sök anställningsnummer..." />
    <button id="clearUserRolesInput" type="button" onclick="clearUserRolesSearch()">Rensa Sök</button>
</div>

<table id="userRolesTable" class="table table-striped table-hover" data-sort-direction="asc">
    <thead>
        <tr>
            <th scope="col"><a href="javascript:void(0);" onclick="sortTable(0)">Anställningsnummer</a></th>
            <th scope="col"><a href="javascript:void(0);" onclick="sortTable(1)">Förnamn</a></th>
            <th scope="col"><a href="javascript:void(0);" onclick="sortTable(2)">Efternamn</a></th>
            <th scope="col"><a href="javascript:void(0);" onclick="sortTable(3)">Roll</a></th>
            <th scope="col"><a href="javascript:void(0);" onclick="sortTable(4)">Skapad</a></th>
            <th scope="col"><a href="javascript:void(0);" onclick="sortTable(5)">Uppdaterad</a></th>
            <th scope="col">Inställningar</th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var user in Model.UsersWithRoles)
        {
            if (user.IsDeleted == false)
            {
                <tr>
                    <td>@user.EmployeeNumber</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.RoleName</td>
                    <td>@user.Created</td>
                    <td>@user.Updated</td>
                    <td>
                        <a asp-page="/UserInfo" asp-route-userId="@user.Id" class="btn btn-info">
                            <i class="fas fa-cog"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>




<div class="mb-3">
    <button id="prevPage" class="btn btn-primary">Bak</button>
    <span id="pageNumber" class="mx-3"></span>
    <button id="nextPage" class="btn btn-primary">Fram</button>
    <select id="pageSelector" class="form-select" aria-label="Page selector" style="max-width: 100px;"></select>
</div>

    
@section Scripts {
    <script src="~/js/userRoles.js"></script>
}

