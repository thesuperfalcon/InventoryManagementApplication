@page
@model InventoryManagementApplication.Pages.OverviewModel
@{
}
<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<link href="~/css/overview.css" rel="stylesheet" />

<div class="container-fluid bg-light">
    <section id="overview-section">
        <div class="row">
            <div class="col-12 mt-3 mb-1 text-center">
                <h4 class="text-uppercase">Översikt</h4>
                <p>Statistik över produkter, lager och användare.</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-12">
                <div class="card shadow-lg mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="text-center mb-0">Produkt</h5>
                    </div>
                    <div class="card-body bg-white">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.ProductQuantity</h5>
                                <p>Antal Produkter</p>
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.Product.Name - @Model.Product.CurrentStock</h5>
                                <p>Produkt med högst antal</p>
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.NewestProduct.Name</h5>
                                <p>Nyaste produkt</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-12">
                <div class="card shadow-lg mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="text-center mb-0">Lager</h5>
                    </div>
                    <div class="card-body bg-white">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.StorageQuantity</h5>
                                <p>Antal Lagerplatser</p>
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.Storage.Name - @Model.Storage.CurrentStock</h5>
                                <p>Lagerplats med mest produkter</p>
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.NewestStorage.Name</h5>
                                <p>Nyaste lagerplatsen</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-12">
                <div class="card shadow-lg mb-3">
                    <div class="card-header bg-warning text-white">
                        <h5 class="text-center mb-0">Användare</h5>
                    </div>
                    <div class="card-body bg-white">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.UserStatistic.EmployeeNumber - @Model.UserStatistic.TotalQuantity</h5>
                                <p>Anställd med mest förflyttade produkter</p>
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.User.FirstName @Model.User.LastName - @Model.User.EmployeeNumber</h5>
                                <p>Senast anställd (@Model.User.Created)</p>
                            </div>
                        </div>
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5>@Model.NewestStatistic.UserName - @Model.NewestStatistic.ProductName</h5>
                                <p>Senast förflyttning</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
