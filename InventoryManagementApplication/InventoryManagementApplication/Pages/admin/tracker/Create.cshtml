@page
@model InventoryManagementApplication.Pages.admin.tracker.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-sm">
                <div class="card-header custom-color text-white">
                    <h4 class="mb-0">Flytta produkt</h4>
                </div>

                <div class="card-body">
                    <form method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="DefaultStorage.Id" />

                        <div class="mb-3">
                            <label asp-for="InventoryTracker.ProductId" class="form-label">Produkter som ej har lagerplats</label>
                            <select asp-for="InventoryTracker.ProductId" class="form-select" asp-items="Model.ProductSelectList"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InventoryTracker.StorageId" class="form-label">Lagerplats</label>
                            <select asp-for="InventoryTracker.StorageId" class="form-select" asp-items="Model.StorageSelectList"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InventoryTracker.Quantity" class="form-label">Antal</label>
                            <input asp-for="InventoryTracker.Quantity" class="form-control" required data-bs-toggle="tooltip" title="Ange antal" />
                            <span asp-validation-for="InventoryTracker.Quantity" class="text-danger d-none"></span>
                        </div>

                        <div class="d-flex">
                            <input type="submit" value="Flytta" class="btn btn-primary me-2" />
                            <a asp-page="Index" class="btn btn-secondary">Tillbaka till lista</a>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.StatusMessage))
                        {
                            <div class="mt-3 alert alert-danger">@Model.StatusMessage</div>
                        }
                        @if (!string.IsNullOrEmpty(Model.StatusMessage1))
                        {
                            <div class="mt-3 alert alert-success">@Model.StatusMessage1</div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/tooltipvalidationadvanced.js"></script>
}