@page
@model InventoryManagementApplication.Pages.admin.product.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Produktinformation</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Namn</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Name)</dd>

                        <dt class="col-sm-4 fw-bold">Artikelnummer</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.ArticleNumber)</dd>

                        <dt class="col-sm-4 fw-bold">Beskrivning</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Description)</dd>

                        <dt class="col-sm-4 fw-bold">Pris</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Price)</dd>

                        <dt class="col-sm-4 fw-bold">Totalt lager</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.TotalStock)</dd>

                        <dt class="col-sm-4 fw-bold">Aktuellt lager</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.CurrentStock)</dd>

                        <dt class="col-sm-4 fw-bold">Skapad</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Created)</dd>

                        <dt class="col-sm-4 fw-bold">Ändrad</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Updated)</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-warning me-2">Redigera</a>
                <a asp-page="./Index" class="btn btn-secondary">Tillbaka till lista</a>
            </div>

        </div>
    </div>
</div>
